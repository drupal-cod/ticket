<?php

/**
 * @file
 * Contains ticket.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\ticket\Entity\TicketType;
use Drupal\ticket\Entity\TicketTypeInterface;
use Drupal\Core\Url;

/**
 * Implements hook_help().
 */
function ticket_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ticket module.
    case 'help.page.ticket':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides functionality for events to have tickets.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function ticket_theme() {
  return array(
    'ticket_registration_add_list' => array(
      'variables' => array('content' => NULL),
    ),
  );
}

/**
* Implements hook_theme_suggestions_HOOK().
*/
function ticket_theme_suggestions_ticket_registration(array $variables) {
  $suggestions = array();
  $entity = $variables['elements']['#ticket_registration'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'ticket_registration__' . $sanitized_view_mode;
  $suggestions[] = 'ticket_registration__' . $entity->bundle();
  $suggestions[] = 'ticket_registration__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'ticket_registration__' . $entity->id();
  $suggestions[] = 'ticket_registration__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}

  /**
   * Prepares variables for list of available ticket type templates.
   *
   * Default template: ticket-registration-add-list.html.twig.
   *
   * @param array $variables
   *   An associative array containing:
   *   - content: An array of ticket types.
   *
   * @see ticket_registration_add_page()
   */
  function template_preprocess_ticket_registration_add_list(&$variables) {
    $variables['ticket_type'] = array();
    if (!empty($variables['content'])) {
      foreach ($variables['content'] as $ticket_type) {
        $variables['ticket_types'][$ticket_type->id()] = array(
            'ticket_type' => $ticket_type->id(),
            'add_link' => \Drupal::l(t($ticket_type->label()), new Url('ticket_registration.add', array('ticket_type' => $ticket_type->id()))),
            'description' => array(
                '#markup' => $ticket_type->getDescription(),
            ),
        );
      }
    }
  }
